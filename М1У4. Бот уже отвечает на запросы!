import telebot
    
# –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –±–æ—Ç–∞ —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º –µ–≥–æ —Ç–æ–∫–µ–Ω–∞
bot = telebot.TeleBot("7884832305:AAGIXnsiWVKBXEDMNZtmR9De0B-uBFvhqH8")
    
# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã '/start' –∏ '/hello'
@bot.message_handler(commands=['start', 'hello'])
def send_welcome(message):
    bot.reply_to(message, f'–ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç {bot.get_me().first_name}!ü§ñ')
    
# –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∫–æ–º–∞–Ω–¥—ã '/heh'
@bot.message_handler(commands=['heh'])
def send_heh(message):
    count_heh = int(message.text.split()[1]) if len(message.text.split()) > 1 else 5
    bot.reply_to(message, "he" * count_heh)
@bot.message_handler(commands=['help'])
def send_help(message):
    help_text = (
        "–ö–æ–º–∞–Ω–¥—ã –±–æ—Ç–∞:\n"
        "üëã /start –∏–ª–∏ /hello - –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ\n"
        "üîÅ/heh [—á–∏—Å–ª–æ] - –ø–æ–≤—Ç–æ—Ä—é 'he' —É–∫–∞–∑–∞–Ω–Ω–æ–µ —á–∏—Å–ª–æ —Ä–∞–∑\n"
        "‚ÑπÔ∏è /help - —Å–ø–∏—Å–æ–∫ –∫–æ–º–∞–Ω–¥")
    bot.reply_to(message, help_text)
@bot.message_handler(commands=['bye'])
def send_bye(message):
    bot.reply_to(message,  "üò¢ –í–æ–∑–≤—Ä–∞—â–∞–π—Å—è, –µ—Å–ª–∏ —á—Ç–æ-—Ç–æ –ø–æ–Ω–∞–¥–æ–±–∏—Ç—Å—è!")
# –ó–∞–ø—É—Å–∫ –±–æ—Ç–∞
bot.polling()
